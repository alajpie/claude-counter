{
	"manifest_version": 3,
	"name": "Claude Counter",
	"version": "5.0.0",
	"description": "Minimal fork of Claude Usage Tracker: shows per-conversation token count, cache timer, and native usage bars for claude.ai.",
	"author": "Alicja",
	"browser_specific_settings": {
		"gecko": {
			"id": "claude_counter@alapie.ca"
		}
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"https://claude.ai/*"
			],
			"js": [
				"lib/browser-polyfill.min.js",
				"lib/o200k_base.js",
				"content-components/content_utils.js",
				"content-components/ui_dataclasses.js",
				"content-components/chat_ui.js",
				"ui.js"
			]
		}
	],
	"permissions": [
		"storage",
		"webRequest",
		"tabs"
	],
	"host_permissions": [
		"*://claude.ai/*",
		"https://api.anthropic.com/*"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"lib/browser-polyfill.min.js",
				"lib/o200k_base.js",
				"tracker-styles.css",
				"injections/rate-limit-watcher.js",
				"injections/webrequest-polyfill.js"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"icons": {
		"512": "icon512.png",
		"128": "icon128.png"
	}
}
